@model Contact_WebApp.Models.IllnessResult;
@{
    Layout = "_Layout";
    ViewData["Title"] = "Fever";
    ViewData["Title-header"] = "Check for Fever";
}
<form id="formm" action="/fevercheck" method="post">

    <input class="radio-measurement" type="radio" name="measurement" value="C" checked/>Celsius
    <input class="radio-measurement" type="radio" name="measurement" value="F"/>Fahrenheit

    <input id="temperature-input" type="number" name="temp" value="0" />
    <input id="submit-btn" type="submit" name="name" value="Check" />

</form>
<div id="display-result">
    @if (Model != null)
    {
        if (@Model.HasFever)
        {
            <p class="illness-result">You've got fever!</p>
        }
        else if (@Model.HasHypothermia)
        {   
            <p class="illness-result">You've got hypothermia!</p>
        }
        else 
        {
            <p class="illness-result">You are perfectly healthy!</p> 
        }
    }
 </div>
